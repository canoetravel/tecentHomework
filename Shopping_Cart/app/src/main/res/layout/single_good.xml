<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/single_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="华为手机"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/single_picture"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            tools:src="@drawable/huawei"></ImageView>

        <TextView
            android:id="@+id/single_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="20元"
            android:textColor="@color/black"
            android:gravity="center"></TextView>

    </LinearLayout>


    <Button
        android:id="@+id/single_in_shopping_bag"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/btn_background"
        android:text="加入购物车"
        android:textSize="10dp"></Button>


</LinearLayout>
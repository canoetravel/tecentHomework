<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopping_bag.shopping_bag"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_bag_exit"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="返回"
            android:background="@drawable/btn_background"
            android:gravity="center"></Button>

        <TextView
            android:id="@+id/bag_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="111"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginLeft="50dp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/bag_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="空空如也，选些东西吧"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"></TextView>

    <ListView
        android:id="@+id/lv_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bag_delete_all"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_background"
            android:text="清空"></Button>

        <Button
            android:id="@+id/bag_purchase"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_background"
            android:text="购买"
            android:layout_marginLeft="200dp"></Button>
    </LinearLayout>

</LinearLayout>